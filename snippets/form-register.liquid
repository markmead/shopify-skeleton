{% form 'create_customer' %}
  <div class="space-y-6 account-form">
    <div>
      {{ form.errors | default_errors }}
    </div>

    <div>
      <label for="first_name"> First Name </label>
      <input type="text" name="customer[first_name]" id="first_name" autocomplete="given-name" class="form-input"/>
    </div>

    <div>
      <label for="last_name"> Last name </label>
      <input type="text" name="customer[last_name]" id="last_name" autocomplete="family-name" class="form-input"/>
    </div>

    <div>
      <label for="email"> Email Address </label>
      <input type="email" name="customer[email]" id="email" autocomplete="email" class="form-input"/>
    </div>

    <div>
      <label for="password" class="registration-form-label">
        Password
      </label>

      {% render 'form-password-input', autocomplete: 'new-password' %}
    </div>

    <button
      type="submit"
      class="w-full text-white bg-green-600 button"
    >
      Register
    </button>
  </div>
{% endform %}
