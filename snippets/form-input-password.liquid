<div x-data="{ type: 'password' }" class="flex items-center">
  <input
    :type="type"
    name="customer[password]"
    id="password"
    autocomplete="{{ autocomplete }}"
    class="form-input"
  />

  <button
    type="button"
    class="p-2 rounded-lg hover:bg-gray-100 ml-1.5 text-gray-500"
    @click="type = (type === 'password') ? 'text' : 'password'"
  >
    <span class="sr-only">
      View password
    </span>

    {% render 'icon-eye' %}
  </button>
</div>
